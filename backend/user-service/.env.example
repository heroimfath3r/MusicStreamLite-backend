# Backend MusicStreamLite - User Service
# Variables de entorno

# Puerto del servidor
PORT=3000

# Base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=musicstreamlite
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=24h

# URLs de las APIs externas
# Estas URLs deben apuntar a tu API Gateway o microservicios correspondientes

# API de álbumes
ALBUMS_API_URL=http://localhost:3001/api/albums

# API de artistas
ARTISTS_API_URL=http://localhost:3001/api/artists

# API de favoritos
FAVORITES_API_URL=http://localhost:3001/api/favorites

# API de géneros
GENRES_API_URL=http://localhost:3001/api/genres

# API de historial de reproducción
PLAY_HISTORY_API_URL=http://localhost:3001/api/play-history

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Modo de ejecución
NODE_ENV=development
